<!DOCTYPE html>
<html>
<head>
  <title>WdimdbApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="banner">
  </div>
  <div class="container">
    <div class="header">
      <div class="row">


        <div class="span9">
          <h1>WDImDB</h1>
        </div>
    <div class="popup_login span3">
          <% if current_user %><div class="coolmovie logged-in">Logged in as <%= current_user.name %></div><% end %>
        </div>
      </div>

      <div class="navbar navbar-inverse">
        <nav class="navbar-inner">
          <ul class ="nav">
            <li class="active"><%= link_to("Home", movies_path) %></li>
            <li><%= link_to("Movies", movies_path) %></li>
            <li><%= link_to("Actors", actors_path) %></li>
                          <% if current_user %>
            <li><%= link_to('Add movie', new_movie_path)  %></li>
            <li><%= link_to('Add actor', new_actor_path)  %></li>
                          <% end %>
          <li><%= link_to('Members', users_path)  %></li>
            <li><%= link_to('Search', new_search_path)  %></li>
            <li><%= link_to('Sign up', new_user_path)  %></li>
            <li><% if current_user %><%= link_to 'Logout', session_path(session), method: :delete, data: { confirm: 'Are you sure?' } %>
              <% else %>
              <%= link_to 'Login', login_path %>
              <% end %>
            </li>
          </ul>
        </nav>
      </div>
    </div>
<%= yield %>

</body>
</html>
