<div class="span5 offset1">
<%= render 'shared/error_message_actor' %>
  <div class="coolmovie">
    <%= form_for(@actor) do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %><br />
    </div>
    <div class="field">
      <%= f.label :actor_image%>
      <%= f.file_field :actor_image%><br/><br/>
    </div>

      <div class="field">
        <p>Add to the following movie(s)?</p>
        <%= hidden_field_tag "actor[movie_ids][]", nil %>
        <% Movie.all.each do |movie| %>
        <div>
          <%= check_box_tag "actor[movie_ids][]", movie.id, @actor.movie_ids.include?(movie.id), id: dom_id(movie) %><% label_tag dom_id(movie), movie.title %>
          <%= movie.title %>
        </div>
        <% end %>
      </div>
    <br>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
</div>
