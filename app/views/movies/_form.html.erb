<div class="span5 offset1">
  <div class="coolmovie">
  <%= form_for(@movie) do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %><br />
    </div>
     <div class="field">
      <%= f.label :year %>
      <%= f.text_field :year %><br />
    </div>
    <div class="field">
      <%= f.label :movie_image%>
      <%= f.file_field :movie_image%><br/><br/>
    </div>
     <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description %><br />
    </div>
    <div class="field">
    <%= f.label :category %>
    <%= f.select "category_id", options_from_collection_for_select(@categories, "id", "category_name") %><br />
    </div>
    <div class="field">
      <%= f.label :actors %>
      <% Actor.all.each do |actor| %>
      <div>
        <%= check_box_tag "movie[actor_ids][]", actor.id, @movie.actors.include?(actor) %>
        <%= actor.name %>
      </div>
      <% end %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
</div>